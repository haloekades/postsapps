<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ekades.movieapps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:name="com.ekades.movieapps.apps.BaseApp"
        android:allowBackup="false"
        android:exported="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ekades.movieapps.features.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ekades.movieapps.features.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.mainmovie.MainMovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.genre.GenreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.movielist.MovieListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".features.notes.NotesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.moviedetail.MovieDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.prayerdetail.PrayerDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.prayerlist.PrayerListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.prayerschedule.searchcity.SearchCityActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.prayerschedule.prayerscheduledetail.PrayerScheduleDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.quranlist.QuranSurahListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.qurandetail.QuranSurahDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ekades.movieapps.features.murottal.MurottalListActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>