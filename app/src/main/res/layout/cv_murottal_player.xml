<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgSurahAr"
        android:layout_width="@dimen/spacing_x64"
        android:layout_height="@dimen/spacing_x64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSurahNameAr"
            style="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSurahName"
        style="@style/Body3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/spacing_x16"
        app:layout_constraintTop_toTopOf="@id/bgSurahAr"
        app:layout_constraintEnd_toStartOf="@id/bgSurahAr"
        app:layout_constraintBottom_toBottomOf="@id/bgSurahAr"/>

    <TextView
        android:id="@+id/tvSurahMean"
        style="@style/Body3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/spacing_x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/bgSurahAr"
        app:layout_constraintStart_toEndOf="@id/bgSurahAr"
        app:layout_constraintBottom_toBottomOf="@id/bgSurahAr"/>

    <LinearLayout
        android:id="@+id/lnSeekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x12"
        android:layout_marginHorizontal="@dimen/spacing_x4"
        app:layout_constraintTop_toBottomOf="@id/bgSurahAr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCurrentDuration"
        style="@style/Label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_x12"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/lnSeekbar"
        app:layout_constraintTop_toBottomOf="@id/lnSeekbar"/>

    <TextView
        android:id="@+id/tvMaxDuration"
        style="@style/Label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_x12"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/lnSeekbar"
        app:layout_constraintTop_toBottomOf="@id/lnSeekbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgActionPlayer"
        android:layout_width="@dimen/spacing_x48"
        android:layout_height="@dimen/spacing_x48"
        android:layout_margin="@dimen/spacing_x12"
        app:layout_constraintTop_toBottomOf="@id/lnSeekbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.ekades.temandoa.lib.ui.component.icon.BasicIconCV
            android:id="@+id/icActionPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgActionPrevious"
        android:layout_width="@dimen/spacing_x36"
        android:layout_height="@dimen/spacing_x36"
        android:layout_marginHorizontal="@dimen/spacing_x16"
        app:layout_constraintTop_toTopOf="@id/bgActionPlayer"
        app:layout_constraintEnd_toStartOf="@id/bgActionPlayer"
        app:layout_constraintBottom_toBottomOf="@id/bgActionPlayer">

        <com.ekades.temandoa.lib.ui.component.icon.BasicIconCV
            android:id="@+id/icActionPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgActionNext"
        android:layout_width="@dimen/spacing_x36"
        android:layout_height="@dimen/spacing_x36"
        android:layout_marginHorizontal="@dimen/spacing_x16"
        app:layout_constraintTop_toTopOf="@id/bgActionPlayer"
        app:layout_constraintStart_toEndOf="@id/bgActionPlayer"
        app:layout_constraintBottom_toBottomOf="@id/bgActionPlayer">

        <com.ekades.temandoa.lib.ui.component.icon.BasicIconCV
            android:id="@+id/icActionNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>