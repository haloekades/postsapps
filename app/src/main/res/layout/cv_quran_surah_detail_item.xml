<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgNumber"
        android:layout_width="@dimen/spacing_x32"
        android:layout_height="@dimen/spacing_x32"
        android:layout_marginTop="@dimen/spacing_x16"
        android:layout_marginStart="@dimen/spacing_x16"
        android:layout_marginLeft="@dimen/spacing_x16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNumber"
            style="@style/Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvArabic"
        style="@style/ArabicBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_x12"
        android:layout_marginLeft="@dimen/spacing_x12"
        android:layout_marginEnd="@dimen/spacing_x16"
        android:layout_marginRight="@dimen/spacing_x16"
        android:textColor="@color/darkKnight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bgNumber"
        app:layout_constraintTop_toBottomOf="@id/bgNumber" />

    <TextView
        android:id="@+id/tvAyahMean"
        style="@style/Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_x20"
        android:layout_marginTop="@dimen/spacing_x12"
        android:paddingBottom="@dimen/spacing_x20"
        android:textColor="@color/emperor"
        app:layout_constraintEnd_toEndOf="@id/tvArabic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArabic" />

</merge>