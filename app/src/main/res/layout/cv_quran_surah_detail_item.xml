<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/tvNumber"
        style="@style/Title5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_x20"
        android:layout_marginLeft="@dimen/spacing_x20"
        android:layout_marginTop="@dimen/spacing_x20"
        android:textColor="@color/brand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvArabic"
        style="@style/ArabicBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_x12"
        android:layout_marginLeft="@dimen/spacing_x12"
        android:layout_marginEnd="@dimen/spacing_x16"
        android:layout_marginRight="@dimen/spacing_x16"
        android:textColor="@color/darkKnight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNumber"
        app:layout_constraintTop_toBottomOf="@id/tvNumber" />

    <TextView
        android:id="@+id/tvAyahMean"
        style="@style/Body4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_x20"
        android:layout_marginTop="@dimen/spacing_x12"
        android:textColor="@color/emperor"
        app:layout_constraintEnd_toEndOf="@id/tvArabic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArabic" />

    <com.ekades.temandoa.lib.ui.component.misc.DividerCV
        android:id="@+id/dividerCV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_x20"
        android:background="@color/mineShaft"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAyahMean" />

</merge>