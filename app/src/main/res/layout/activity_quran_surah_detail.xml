<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand"
    tools:context=".features.prayerschedule.searchcity.SearchCityActivity">

    <com.ekades.ruangmuslim.lib.ui.component.toolbar.ToolbarCV
        android:id="@+id/toolbarCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/mainCoordinatorLayout"
        android:layout_width="@dimen/spacing_x0"
        android:layout_height="@dimen/spacing_x0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCV">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/spacing_x0">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/collapsingToolbarBgView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvSurahName"
                        style="@style/Title4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_x16"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toStartOf="@id/tvSurahNameAr"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvSurahMean"
                        style="@style/Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_x8"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@id/tvSurahName"
                        app:layout_constraintStart_toStartOf="@id/tvSurahName"
                        app:layout_constraintTop_toBottomOf="@id/tvSurahName" />

                    <TextView
                        android:id="@+id/tvSurahType"
                        style="@style/Body2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_x8"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="@id/tvSurahName"
                        app:layout_constraintStart_toStartOf="@id/tvSurahName"
                        app:layout_constraintTop_toBottomOf="@id/tvSurahMean" />

                    <TextView
                        android:id="@+id/tvTotalAyah"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_x8"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/tvSurahNameAr"
                        app:layout_constraintEnd_toEndOf="@id/tvSurahNameAr"/>

                    <TextView
                        android:id="@+id/tvSurahNameAr"
                        style="@style/Title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_x16"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/viewTopRound"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_x16"
                        android:layout_marginTop="@dimen/spacing_x20"
                        app:layout_constraintTop_toBottomOf="@id/tvSurahType" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_x16">

                <TextView
                    android:id="@+id/tvBismillah"
                    style="@style/ArabicBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacing_x16"
                    android:text="@string/bismillah"
                    android:textColor="@color/darkKnight"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvQuranSurah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvBismillah" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.ekades.ruangmuslim.features.audioplayer.view.AudioPlayerCV
            android:id="@+id/audioPlayerCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/spacing_x20"
            app:layout_anchor="@id/nestedScrollView"
            app:layout_anchorGravity="bottom|center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>